
  <form action="/admin/news/save" method="post">
    <label>Título</label>
    <input type="text" name="title" id="news_title" placeholder="Insira o título da matéria">
    <br/>
    <label>Descrição</label>
    <textarea name="resume" id="news_resume" rows="5" cols="30"></textarea>
    <br/>
    <label>Notícia</label>
    <textarea name="body" id="news_body" rows="5" cols="30"></textarea>
    <br/>
    <input type="submit" value="Enviar">
  </form>

